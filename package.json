{
  "name": "english-for-waiters-bot",
  "version": "1.0.0",
  "description": "Telegram bot for teaching English to Russian-speaking waiters",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create english-waiters-db",
    "db:migrate": "wrangler d1 migrations apply english-waiters-db",
    "kv:create": "wrangler kv:namespace create USER_SESSIONS && wrangler kv:namespace create LESSON_CACHE && wrangler kv:namespace create AI_CONTEXT",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/"
  },
  "keywords": [
    "telegram",
    "bot",
    "english",
    "learning",
    "waiters",
    "cloudflare",
    "workers"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0",
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  }
}
